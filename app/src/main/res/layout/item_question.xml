<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/sf_pro_regular"
        android:textSize="16sp"
        tools:text="01" />

    <io.github.sidvenu.mathjaxview.MathJaxView
        android:id="@+id/tv_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/tv_question_number"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_question_number"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="@color/grey_dark"
        android:textSize="16sp"
        tools:text="Jee Main 2020" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_paper"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_light" />

</RelativeLayout>